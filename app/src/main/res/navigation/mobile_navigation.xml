<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_events">

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.alcoholcounter.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map"/>

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.example.alcoholcounter.ui.statistics.StatisticsFragment"
        android:label="@string/title_statistics"
        tools:layout="@layout/fragment_events"/>

    <fragment
        android:id="@+id/navigation_events"
        android:name="com.example.alcoholcounter.ui.events.EventsFragment"
        android:label="@string/title_events"
        tools:layout="@layout/fragment_statistics" />
</navigation>
