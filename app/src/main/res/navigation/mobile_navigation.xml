<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_drinks">

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.alcoholcounter.ui.home.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map"/>

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.example.alcoholcounter.ui.dashboard.StatisticsFragment"
        android:label="@string/title_statistics"
        tools:layout="@layout/fragment_drinks"/>

    <fragment
        android:id="@+id/navigation_drinks"
        android:name="com.example.alcoholcounter.ui.drinks.DrinksFragment"
        android:label="@string/title_drinks"
        tools:layout="@layout/fragment_statistics" />
</navigation>
