<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@android:color/holo_blue_dark"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="BigEvent" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/editEventButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_edit_blue_24dp"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp" />

    </LinearLayout>

    <View
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:background="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/eventPrize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_attach_money_green_16dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        tools:text="20" />

    <TextView
        android:id="@+id/eventTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_access_time_green_16dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        tools:text="21:00 - 23:00" />

    <TextView
        android:id="@+id/eventLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_place_green_16dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="5dp"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        android:layout_marginBottom="8dp"
        tools:text="My Bar" />

</LinearLayout>